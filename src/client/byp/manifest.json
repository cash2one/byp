{
  "manifest_version": 2,

  "name": "S.W.自助打包服务",
  "version": "1.0",
  "description": "S.W.实时自助打包服务",

  "permissions": [
    "http://localhost"
  ],
  
  "browser_action": {
    "default_icon": "static/img/icon_19.png",
    "default_popup": "popup.html"
  },

  "icons": {
    "128": "static/img//icon_128.png",
    "16": "static/img//icon_16.png",
    "19": "static/img//icon_19.png",
    "32": "static/img//icon_32.png",
    "48": "static/img//icon_48.png"
  },

  "content_security_policy": "script-src 'self' 'unsafe-eval' http://localhost;object-src 'self' 'unsafe-eval' http://localhost"

}